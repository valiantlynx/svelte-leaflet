{
	"name": "@valiantlynx/svelte-ui",
	"version": "0.0.19",
	"publishConfig": {
		"access": "public"
	},
	"description": "Svelte ui component library used in valiantlynx projects",
	"maintainers": [
		"valiantlynx <valiantlynxz@gmail.com> (https://www.valiantlynx.com/)"
	],
	"engines": {
		"node": ">=16.14"
	},
	"keywords": [
		"sveltekit",
		"rich text editor",
		"javascript",
		"typescript",
		"svelte",
		"blocks"
	],
	"author": "valiantlynx",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/valiantlynx/svelte-ui.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && yarn package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"release": "yarn package && npx changeset publish",
		"prepublishOnly": "yarn package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@iconify/svelte": "^3.1.4",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@valiantlynx/eslint-config-custom": "^0.0.1",
		"@valiantlynx/tailwind-config": "^0.0.9",
		"@valiantlynx/tsconfig": "^0.0.25",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.9",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"@valiantlynx/general-config": "^0.0.18",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.4.1",
		"vite": "^4.4.2"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"svelte-loading-spinners": "^0.3.4"
	}
}
