{
	"name": "@valiantlynx/svelte-leaflet",
	"version": "0.0.14",
	"publishConfig": {
		"access": "public"
	},
	"description": "Svelte leaflet components library used in valiantlynx projects. easily add maps to your sveltekit project.",
	"maintainers": [
		"valiantlynx <valiantlynxz@gmail.com> (https://www.valiantlynx.com/)"
	],
	"packageManager": "yarn@1.22.19",
	"engines": {
		"node": ">=16.14"
	},
	"keywords": [
		"sveltekit",
		"svelte",
		"leaflet",
		"typescript",
		"svelte",
		"blocks"
	],
	"author": "valiantlynx",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/valiantlynx/svelte-leaflet.git"
	},
	"homepage": "https://svelte-leaflet.valiantlynx.com",
	"scripts": {
		"dev": "vite --host",
		"build": "vite build && yarn run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"release": "pnpm run package && pnpm changeset publish",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepublishOnly": "pnpm package",
		"ci:version": "pnpm changeset version",
		"ci:publish": "pnpm publish -r"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"src/index.js",
		"src/components",
		"src/extensions",
		"src/lib"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^5.0.1",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@sveltejs/package": "^2.0.0",
		"@valiantlynx/eslint-config-custom": "^0.0.1",
		"@valiantlynx/svelte-rich-text": "^0.2.3",
		"@valiantlynx/tailwind-config": "^0.0.9",
		"@valiantlynx/tsconfig": "^0.0.25",
		"autoprefixer": "^10.4.16",
		"dotenv": "^16.4.5",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"leaflet-routing-machine": "^3.2.12",
		"postcss": "^8.4.31",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.2.8",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-french-toast": "^1.2.0",
		"tailwindcss": "^3.3.5",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	},
	"svelte": "./dist/index.js",
	"main": "dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@valiantlynx/svelte-ui": "0.0.23",
		"leaflet": "^1.9.4",
		"leaflet.fullscreen": "^3.0.0"
	}
}
