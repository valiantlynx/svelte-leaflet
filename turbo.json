{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["PORT"],
  "pipeline": {
    "anime-site#dev": {
      "dependsOn": ["anime-site-api#docker"]
    },
    "build": {
      "dependsOn": ["^build", "^format", "^package"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**", ".svelte-kit/**", ".vercel/**"],
      "env": ["NEXT_PUBLIC_API_HOST"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build", "^format"]
    },
    "preview": {
      "dependsOn": ["^format", "^build"]
    },
    "format": {},
    "package": {
      "dependsOn": [ "^build"]
    },
    "release": {
      "dependsOn": [ "^build"]
    },
    "python": {
      "dependsOn": ["python:pip"]
    },
    "python:pip": {},
    "check-types": {},
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "docker": {},
    "start": {},
    "pull": {},
    "push": {
      "dependsOn": ["^pull"]
    }
  }
}
